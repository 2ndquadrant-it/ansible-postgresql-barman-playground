{% if inventory_hostname in groups['postgres'] %}
# include Postgres binaries in the PATH
export PATH={{ pg_bin_directory }}:$PATH
{% endif %}

# terminal prompt
export PS1='\[\033[1;33m\]\u\[\033[1;37m\]@\[\033[1;32m\]\h\[\033[1;37m\]:\[\033[1;31m\]\w \[\033[1;36m\]\$ \[\033[0m\]'

# aliases
alias ls='ls -h --color'
alias l='ls -la'
